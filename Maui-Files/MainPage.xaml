<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WellnessApp.MainPage"
             Title="Main Page"
             BackgroundColor="AntiqueWhite"
             >

    <StackLayout Padding="20" Spacing="10" Orientation="Vertical">
        <Button Text="Display Available Themes" Clicked="ShowThemesClicked"/>

        <ListView x:Name="ThemeList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name}" Margin="10" HorizontalOptions="Center"/>
                            <Label Text="{Binding Description}" Margin="10" HorizontalOptions="Center"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>




</ContentPage>
