<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WellnessApp.AddPage"
             Title="Add Page"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <Grid RowDefinitions="*, Auto">
        <!-- Main content area -->
        <ScrollView Grid.Row="0">
            <StackLayout Padding="10">
                <!-- Main Part of Page -->
                <Label Text="Categories"
                       FontSize="Large"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{DynamicResource TextColor}"/>
                <ListView x:Name="CategoryList" ItemTapped="listView_ItemTapped_Category"
                          BackgroundColor="{DynamicResource BackgroundColor}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="10">
                                    <Label Text="{Binding Name}" 
                                           Margin="10" 
                                           HorizontalOptions="Center"
                                           TextColor="{DynamicResource TextColor}"/>
                                    <Label Text="{Binding Description}" 
                                           Margin="10" 
                                           HorizontalOptions="Center"
                                           TextColor="{DynamicResource TextColor}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>

        <!-- Bottom Navigation Row -->
        <Grid Grid.Row="2"
              BackgroundColor="{DynamicResource BackgroundColor}"
              Padding="5"
              RowDefinitions="Auto"
              ColumnDefinitions="*,*,*,*">
              
            <!-- Main/Home Button -->
            <Button Text="Home"
                    x:Name="HomeButton"
                    Clicked="OnHomeButtonClicked"
                    Grid.Column="0"
                    ImageSource="home_icon.png"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Grey"
                    TextColor="{DynamicResource TextColor}"/>
                    
            <!-- Calendar Button -->
            <Button Text="Calendar"
                    x:Name="CalendarButton"
                    Clicked="OnCalendarButtonClicked"
                    Grid.Column="1"
                    ImageSource="search_icon.png"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Grey"
                    TextColor="{DynamicResource TextColor}"/>
                    
            <!-- Activity Button -->
            <Button Text="Explore"
                    x:Name="ExploreButton"
                    Clicked="OnExploreButtonClicked"
                    Grid.Column="2"
                    ImageSource="activity_icon.png"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Grey"
                    TextColor="{DynamicResource TextColor}"/>
                    
            <!-- Profile Button -->
            <Button Text="Profile"
                    x:Name="ProfileButton"
                    Clicked="OnProfileButtonClicked"
                    Grid.Column="3"
                    ImageSource="profile_icon.png"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Grey"
                    TextColor="{DynamicResource TextColor}"/>
        </Grid>
    </Grid>
</ContentPage>